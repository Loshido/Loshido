---
import Html from './html.astro';

import Exit from "../assets/blog/exit.svg"
import FallingStars from '../components/FallingStars.astro';

interface Props {
    nav: {
        label: string,
        href: string
    }[],
    title?: string,
    description?: string,
    image?: ImageMetadata
}

const { nav, title, description, image } = Astro.props
---

<Html title={title} description={description} image={image}
    class={`min-h-[80dvh] w-full h-full
    xl:px-64 lg:px-56 md:px-36
    sm:pl-24 pl-12 py-4 pr-4`}
    style="--stars: #5E3A4F30">
    <div class="absolute w-0.5 h-full top-0 z-40
        bg-gradient-to-b from-dark-pink/25 from-80% to-dark-pink/0"/>
    {
        nav.length === 1
        ? <a href={nav[0].href}
            class="p-2 text-dark-pink xl:text-2xl lg:text-xl text-lg font-semibold uppercase
                flex flex-row items-center gap-2 hover:text-dark-pink/50 transition-colors">
            <Exit/>
            { nav[0].label }
        </a>
        : <nav class="flex flex-row items-center gap-4 
            xl:text-2xl lg:text-xl text-lg font-semibold uppercase">
            {
                nav.map(a => <a href={a.href}
                    class="p-2 text-dark-pink hover:text-dark-pink/50 transition-colors">
                    { a.label }
                </a>) 
            }
        </nav>
    }
    
    <div class="w-1/3 h-0.5 ml-0.5 bg-gradient-to-r from-dark-pink/25 to-dark-pink/0 z-40"/>
    <slot/>
    <section class="absolute top-0 left-0 w-full h-[70ch] isolate pointer-events-none">
        <FallingStars/>
        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-white/0 to-white/100 z-20"/>
    </section>
</Html>